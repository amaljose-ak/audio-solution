<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-prod"class="btn btn-primary ml-auto">Add Product</a>
        </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">NO.</th>
      <th scope="col">Title</th>
      <th scope="col">Decreption</th>
      <th scope="col">Price</th>

      <th><img style="margin: left 55px;">Image</th>
      
    </tr>
  </thead>
  <tbody>
    {{#each products }}
    <tr>
      <th scope="row">*</th>
      <td>{{this.name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Price}}</td>
      <td>{{this.Decreption}}</td>
      
      <td><img style=" width:150px;height:80px "src="/prod-img/{{this._id}}.jpg" alt=""></td>

      <td>
         <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
         <a href="/admin/delete-prd/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure to delete {{this.name}}')">Delete</a> 

      </td>
    </tr>
    {{/each}}
 
  </tbody>
</table>
    </div>
</section>